@model ScreeningReports.Models.User
@{
    ViewBag.Title = "SCUpdate";
}

<html>
<head>
    <meta name="viewport" content="widthdevice-width" />
    
</head>
<body>
    <div id="ReportCheckView">
        @using (Html.BeginForm("SCUserPassport", "ScreeningCenter"))
        {
        <h3>Update Reports</h3>
        <table style="align-content:center">
            <tr></tr>
            <tr>
                <td>@Html.LabelFor(m => m.PassportNo)</td>
                <td>@Html.EditorFor(m => m.PassportNo)</td>
            </tr>

            <tr>
                <td style="color:red">@Html.ValidationMessageFor(m => m.PassportNo)</td>
                <td colspan="2" style="color:red">
                    <label class="field-validation-error">@Html.DisplayFor(m => m.SCPassportErrorMessage)</label>
                </td>
            </tr>

            <tr>

                <td> Negative: @Html.RadioButtonFor(m => m.TestResult, "Negative")</td>

                <td>Positive: @Html.RadioButtonFor(m => m.TestResult, "Positive")</td>
            </tr>

            <tr>
                <td style="color:red">@Html.ValidationMessageFor(m => m.TestResult)</td>
                <td colspan="2" style="color:red">
                    <label class="field-validation-error">@Html.DisplayFor(m => m.SCResultError)</label>
                </td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" name="Update" value="Update" /></td>
                <td><input type="reset" name="reset" value="Clear" /></td>
            </tr>
        </table>
        }
    </div>
</body>
</html>

